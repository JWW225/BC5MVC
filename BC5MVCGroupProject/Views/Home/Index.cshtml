    ViewBag.Title = "Home Page";
}


<div class="jumbotron" style="background-color:#fad97a">
    <!--begin bg-carousel-->
    <div id="bg-fade-carousel" class="carousel slide carousel-fade" data-ride="carousel">
        <!-- Wrapper for slides -->
        <div class="carousel-inner">
            <div class="item active">
                <div class="homeslide1"></div>
            </div>
            <div class="item">
                <div class="homeslide2"></div>
